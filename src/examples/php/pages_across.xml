<?xml version="1.0"?>
<!DOCTYPE report >
<Report fontSize="20" orientation="landscape" pagesAcross="3">
	<Alternate>
		<NoData>
			<Output>
				<Line fontSize="12">
					<literal>NO DATA</literal>
				</Line>		
			</Output>
		</NoData>
	</Alternate>
	<ReportHeader>
		<Output>
			<Line/>
			<Line fontSize="12">
				<literal>Test Report</literal>
			</Line>
			<Line fontsize="4"/>
			<HorizontalLine size="4" bgcolor="'white'"/>
			<HorizontalLine size="2" bgcolor="'black'"/>
			<HorizontalLine size="4" bgcolor="'white'"/>
		</Output>				
	</ReportHeader>

	<PageHeader>
		<Output>
			<Line fontSize="11">
				<literal>Test Report (Page Header)</literal>
			</Line>
			<HorizontalLine size="4" bgcolor="'white'"/>
		</Output>
	</PageHeader>		
	<Breaks>	
		<Break name="break0" newpage="no" headernewpage="yes">
			<BreakHeader>
				<Output>
					<Line>
						<literal col="1">Break Header: </literal>
						<field value="group" width="20" align="left" col="1"/>					
					</Line>
				</Output>								
			</BreakHeader>
			<BreakFields>
				<BreakField value="group"/>
			</BreakFields>
			<BreakFooter>
				<Output>
					<HorizontalLine size="4" bgcolor="'white'"/>
					<HorizontalLine size="2" bgcolor="'black'"/>
					<HorizontalLine size="4" bgcolor="'white'"/>
					<Line>
						<field value="group" width="20" align="left" col="1"/>					
					</Line>
					<HorizontalLine size="4" bgcolor="'white'"/>
					<HorizontalLine size="2" bgcolor="'black'"/>
					<HorizontalLine size="4" bgcolor="'white'"/>
				</Output>
			</BreakFooter>
		</Break>
	</Breaks>
	<Detail>
		<FieldHeaders>
			<Output page="1">
				<HorizontalLine size="1" bgcolor="'black'"/>
				<Line bgcolor="'0xe5e5e5'">
					<literal width="20" col="1">First Name</literal>
					<literal width="1"/>
					<literal width="20" col="2">Last Name</literal>
					<literal width="1"/>
					<literal width="20" col="3">Color</literal>
				</Line>
				<HorizontalLine size="1" bgcolor="'black'"/>
				<HorizontalLine size="4" bgcolor="'white'"/>
			</Output>
			<Output page="2">
				<HorizontalLine size="1" bgcolor="'black'"/>
				<Line bgcolor="'0xe5e5e5'">
					<literal width="20" col="1">First Name</literal>
					<literal width="1"/>
					<literal width="20" col="2">Last Name</literal>
				</Line>
				<HorizontalLine size="1" bgcolor="'black'"/>
				<HorizontalLine size="4" bgcolor="'white'"/>
			</Output>
			<Output page="3">
				<HorizontalLine size="1" bgcolor="'black'"/>
				<Line bgcolor="'0xe5e5e5'">
					<literal width="20" col="1">First Name</literal>
				</Line>
				<HorizontalLine size="1" bgcolor="'black'"/>
				<HorizontalLine size="4" bgcolor="'white'"/>
			</Output>
		</FieldHeaders>		
		<FieldDetails>
			<Output>
				<Line bgcolor="iif(r.detailcnt%2,'0xe5e5e5','white')" fontSize="20">
					<field value="first_name" width="20" align="left" col="1"/>
					<literal width="1"/>
					<field value="last_name" width="20" align="left" col="2"/>
					<literal width="1"/>
					<field value="color" width="20" align="left" col="3"/>
				</Line>
				<Line  fontSize="20"/>
			</Output>
		</FieldDetails>
	</Detail>

	<PageFooter>
		<Output>
			<Line>
				<literal>Page: </literal>	
				<field value="r.pageno" width="3" align="right"/>
			</Line>
		</Output>
	</PageFooter>

	<ReportFooter>
	</ReportFooter>
</Report>
